{% extends 'base.html' %}

{% block title %}
Adoption Homepage
{% endblock %}

{% block main_content %}
    {% for msg in msgs %}
    <div class="row justify-content-center mt-2">
        <div class="col">
           <p class="text-white bg-success">{{msg}}</p>
        </div>
    </div>
    {% endfor %}
    <div class="row justify-content-center mt-2">
    {% for pet in pets %}
        <div class="card text-center col-4 mb-2">
            <img src="{{pet.photo_url}}" height="300px" width="300px" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{pet.name}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                {% if pet.available %}
                    Available to adopt 
                {% else %}
                    Not available to adopt
                {% endif %}
                </h6>
                <p class="card-text">Species: {{pet.species}}
                <br>
                Age: {{pet.age}}</p>
                <p class="card-text">{{pet.notes}}</p>
                <a href="/{{pet.id}}" class="btn btn-warning" role="button">Edit pet</a>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}